{
  "hooks": {
    "before:init": ["npm run lint", "npm test"],
    "after:bump": "npx auto-changelog -p --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "git": {
    "commitMessage": "Release ${version}",
    "tagAnnotation": "Release ${version}",
    "changelog": "npx auto-changelog -u --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)' --stdout"
  },
  "npm": { "publish": false },
  "github": {
    "release": true,
    "releaseName": "metalsmith-markdown-partials ${version}",
    "tokenRef": "GH_TOKEN"
  }
}
